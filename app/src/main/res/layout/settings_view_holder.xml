<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/lexenddeca"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/stylishColor"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="end"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lexenddeca"
                        android:layout_marginRight="10dp"
                        android:text="Mobile 1"/>

                    <EditText
                        android:id="@+id/mobile1EditText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/lexenddeca"
                        android:hint="+8801XXXXXXXXXXX"
                        android:gravity="center"
                        android:background="@drawable/ic_edittext"
                        android:enabled="false"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lexenddeca"
                        android:layout_marginRight="10dp"
                        android:text="Mobile 2"/>

                    <EditText
                        android:id="@+id/mobile2EditText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/lexenddeca"
                        android:hint="+8801XXXXXXXXXXX"
                        android:gravity="center"
                        android:background="@drawable/ic_edittext"
                        android:enabled="false" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lexenddeca"
                        android:layout_marginRight="10dp"
                        android:text="Mobile 3"/>

                    <EditText
                        android:id="@+id/mobile3EditText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/lexenddeca"
                        android:hint="+8801XXXXXXXXXXX"
                        android:gravity="center"
                        android:background="@drawable/ic_edittext"
                        android:enabled="false" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="45dp"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lexenddeca"
                        android:layout_marginLeft="15dp"

                        android:text="Buzzer"/>

                    <CheckBox
                        android:id="@+id/checkboxBuzzer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:fontFamily="@font/lexenddeca"
                        android:gravity="center"
                        android:enabled="false"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lexenddeca"
                        android:layout_marginLeft="15dp"

                        android:text="Relay"/>

                    <CheckBox
                        android:id="@+id/checkboxRelay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:fontFamily="@font/lexenddeca"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <Button
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>